var number = 5;

switch(number){
  case 1: console.log("sc: it's 1"); break;
  case 2: console.log("sc: it's 2"); break;
  case 3: console.log("sc: it's 3"); break;
  default: console.log("sc: another value");
}

function getFruitColor(fruit){
  switch(fruit){
    case "orange": return "fruit has an orange color";
    case "banana":return"fruit has a yellow color";
    default:return"I don't know the color";
  }
}
   console.log (getFruitColor("orange"));
var result=getFruitColor("banana");
console.log (result);

var specialBananaFromUglyTeacher="banana";
var arr=["pear","apple",specialBananaFromUglyTeacher];
console.log (getFruitColor(arr[1]));

for(var index = 0; index <= 2 ; index = index + 1){
  console.log (getFruitColor(arr[index]));  
}

